            android:name="com.example.helixmobile.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="RegisterSuccessfull"
            android:screenOrientation="portrait"></activity>
        <activity android:name="StartClass"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            ></activity>
        <activity android:name="Synchronization"
            android:screenOrientation="portrait"></activity>
        <activity android:name="Podesuvanja"
            android:screenOrientation="portrait"></activity>
        <activity android:name="Generalii"
            android:screenOrientation="portrait"></activity>
        <activity android:name="Opshto"
            android:screenOrientation="portrait"></activity>
        <activity android:name="PreStartMeni"></activity>
        <activity android:name="SyncJson"></activity>
        <activity android:name="Masi"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" ></activity>
